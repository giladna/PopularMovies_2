<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="movie_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subjectStyle" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:textColor">@color/titleBackground</item>
    </style>

    <style name="TextViewLabelStyle">
        <item name="android:textSize">@dimen/textsize_generic</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/padding_generic_x_2</item>
        <item name="android:paddingTop">@dimen/padding_generic</item>
    </style>

    <style name="TextViewMarginMediumStyle">
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

    <style name="TextViewValueStyle">
        <item name="android:textSize">@dimen/textsize_generic</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/padding_half_generic</item>
        <item name="android:paddingRight">@dimen/padding_half_generic</item>
        <item name="android:paddingTop">@dimen/padding_generic</item>
    </style>
</resources>
