<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:showIn="@layout/activity_detail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_generic"
        android:paddingLeft="@dimen/padding_generic_x_2"
        android:textSize="@dimen/textsize_generic"
        android:text="@string/rating_label"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rating_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_generic"
        android:paddingLeft="@dimen/padding_half_generic"
        android:paddingRight="@dimen/padding_half_generic"
        android:textSize="@dimen/textsize_generic"
        android:textStyle="bold" />
</LinearLayout>